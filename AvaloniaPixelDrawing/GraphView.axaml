<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avaloniaPixelDrawing="clr-namespace:AvaloniaPixelDrawing"
             x:Class="AvaloniaPixelDrawing.GraphView">
    <Canvas x:Name="GraphParentCanvas">
        <avaloniaPixelDrawing:GraphControl Name="GraphControl"
                                           Width="{Binding #GraphParentCanvas.Bounds.Width}"
                                           Height="{Binding #GraphParentCanvas.Bounds.Height}"/>
        <Line x:Name="VerticalLine" 
              Stroke="Gray" 
              StrokeThickness="1" 
              StartPoint="0,200" 
              EndPoint="200,200"/>
    </Canvas>
</UserControl>